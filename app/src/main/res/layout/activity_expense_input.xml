
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.android.alaa.financeapp.activities.ExpenseInputActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/amount_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/expense_text_amount"/>
        <EditText
            android:layout_toRightOf="@id/amount_key"
            android:layout_marginLeft="30dp"
            android:id="@+id/amount_value"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text=""/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/category_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/expense_text_category"/>
        <EditText
            android:layout_toRightOf="@id/category_key"
            android:layout_marginLeft="30dp"
            android:id="@+id/category_value"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text=""/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/date_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/expense_text_date"/>
        <EditText
            android:layout_toRightOf="@id/date_key"
            android:layout_marginLeft="30dp"
            android:id="@+id/date_value"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text=""/>
    </RelativeLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/expense_btn_submit"
        />
</LinearLayout>
